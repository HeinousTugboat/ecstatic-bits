{
  "name": "ecstatic-bits",
  "version": "3.0.0",
  "description": "YAECS",
  "main": "src/ecstatic-bits.ts",
  "typings": "src/ecstatic-bits.ts",
  "scripts": {
    "docs": "typedoc --out docs --mode file src/ecstatic-bits.ts",
    "lint": "tslint --project .",
    "test": "nyc mocha",
    "test:vsc": "nyc mocha -R tap test/**/*.ts || @echo off"
  },
  "nyc": {
    "extension": [
      ".ts",
      "tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HeinousTugboat/ecstatic-bits.git"
  },
  "author": "HeinousTugboat <admin@heinousindustries.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HeinousTugboat/ecstatic-bits/issues"
  },
  "homepage": "https://github.com/HeinousTugboat/ecstatic-bits#readme",
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/mocha": "^2.2.48",
    "@types/sinon": "^2.3.7",
    "chai": "^4.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "rxjs": "^6.3.3",
    "sinon": "^2.3.5",
    "source-map-support": "^0.4.18",
    "ts-node": "^3.3.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
